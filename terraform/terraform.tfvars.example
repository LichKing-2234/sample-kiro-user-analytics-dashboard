# AWS Configuration
aws_region     = "us-east-1"
aws_account_id = "123456789012"

# Project Configuration
project_name = "kiro-user-report-dashboard"

# S3 Bucket Name including prefix (e.g. kiro-dev/user)
s3_bucket_name = "your-bucket-name/prefix"

# Glue Configuration
glue_database_name = "kiro-user-report"

# Crawler Schedule (cron format)
# Default: Daily at 2 AM UTC
glue_crawler_schedule = "cron(0 2 * * ? *)"

# Identity Store ID for username lookup (required â€” from IAM Identity Center)
identity_store_id = "d-xxxxxxxxxx"

# Tags
tags = {
  Project     = "Kiro User Report"
  Environment = "Development"
  ManagedBy   = "Terraform"
  Owner       = "YourName"
}
